<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.1"
            android:background="@color/grey">
            <TextView
                android:id="@+id/customer_name_label"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:text="Customer Name"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/customer_vehicle_label"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Model"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/service_due_label"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Due Date"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/frame_number_label"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Frame No."
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/address_line_one_label"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:text="Address line 1"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/address_line_two_label"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:text="Address line 2"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:padding="5dp"/>
            <TextView
                android:id="@+id/registration_label"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Registration"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/service_type_label"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Service Type"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/recycle_date_label"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Recycle Date"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mobile_one_label"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Mobile"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:padding="5dp"/>

                <CheckBox
                    android:id="@+id/mobile_selected"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:background="@color/light"
                    android:padding="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/mobile_two_label"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="Phone"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="start"
                    android:padding="5dp"/>

                <CheckBox
                    android:padding="5dp"
                    android:id="@+id/phone_selected"
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:background="@color/light"/>
            </LinearLayout>






        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.9">
            <TextView
                android:id="@+id/customer_name_value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:background="@drawable/another_text_border"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/customer_vehicle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:background="@drawable/another_text_border"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/service_due_value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:background="@drawable/another_text_border"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/frame_number_value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:background="@drawable/another_text_border"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/address_line_one"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:maxLines="2"
                android:background="@drawable/another_text_border"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/address_line_two"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:maxLines="2"
                android:background="@drawable/another_text_border"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/registration_value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/another_text_border"
                android:gravity="start"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/service_type_value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:background="@drawable/another_text_border"
                android:padding="5dp"/>


            <TextView
                android:id="@+id/recycle_date_value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:background="@drawable/another_text_border"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/mobile_one_value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:background="@drawable/another_text_border"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/mobile_two_value"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:background="@drawable/another_text_border"
                android:padding="5dp"/>



        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageButton
                android:id="@+id/english_check_box"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@drawable/message"
                android:gravity="center"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.576"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.466" />

            <ImageView
                android:id="@+id/call_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"

                android:background="@drawable/calling_button_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.735"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.533" />

            <ImageButton
                android:id="@+id/service_history_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/previous_remarks"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.043"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/setappointment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/appointment"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.207"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.466" />

            <ImageButton
                android:id="@+id/cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.929"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.466" />

            <ImageButton
                android:id="@+id/reminder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/reminder"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.398"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.466" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>




</LinearLayout>