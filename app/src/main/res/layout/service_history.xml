<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/service_history_recycleview"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_margin="5dp"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:id="@+id/bottom_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/another_text_border"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginBottom="25dp">

        <EditText
            android:id="@+id/enter_remark"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:maxLength="200"
            android:inputType="textCapWords"

            android:hint="Please Enter Remark.."
            android:imeOptions="actionNone"/>

        <ImageView
            android:id="@+id/send_remark"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/cricle_tab"
            android:padding="5dp"
            android:rotation="-50"
            android:src="@drawable/send_24"
            tools:ignore="UseAppTint"
            app:tint="@color/firebase_yellow" />
    </LinearLayout>
</LinearLayout>